import numpy as np

n = int(input("Введите количество столбцов "))
m = int(input("Введите количество строк "))
matrix = np.zeros((n,m))
matrix[0, :] = 1  # Заполняем верхнюю строку единицами
matrix[-1, :] = 1  # Заполняем нижнюю строку единицами
matrix[:, 0] = 1  # Заполняем левый столбец единицами
matrix[:, -1] = 1  # Заполняем правый столбец единицами

print(matrix)
